<div class="container text-center">
  <p id="notice"><%= notice %></p>

<h1>Users</h1>
<p>
  <%= form_tag(search_users_path, :method => "get", id: "search-form") do %>
    <%= text_field_tag :search, params[:search], placeholder: "Search Posts" %>
    <%= submit_tag "Search" %>
  <% end %>
</p>
<table class="table">
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Phnum</th>
      <th>Address</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.phnum %></td>
        <td><%= user.address %></td>
        <td><%= user.email %></td>
        <td><button><%= link_to 'Show', user %></button></td>
        <td><button><%= link_to 'Edit', edit_user_path(user) %></button></td>
        <td><button><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>

</div>
